cmake_minimum_required (VERSION 2.6)

add_executable(tcpserver main.c connection_handling.c)
add_subdirectory(commands_handling)
add_subdirectory(parsers)
add_subdirectory(messages_handling)
add_subdirectory(signals_handling)
add_dependencies (tcpserver commands_handling)
add_dependencies (tcpserver parsers)
add_dependencies (tcpserver messages_handling)
add_dependencies (tcpserver signals_handling)
target_link_libraries(tcpserver commands_handling)
target_link_libraries(tcpserver parsers)
target_link_libraries(tcpserver messages_handling)
target_link_libraries(tcpserver signals_handling)
#install (PROGRAMS ${CMAKE_CURRENT_BINARY_DIR}/tcpserver DESTINATION bin)

